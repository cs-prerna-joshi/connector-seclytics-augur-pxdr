            "enabled": true,
            "parameters": [
                {
                    "title": "Domain",
                    "required": true,
                    "editable": true,
                    "visible": true,
                    "type": "text",
                    "name": "domain",
                    "value": "",
                    "description": "Domain name for which you want to retrieve a report."
